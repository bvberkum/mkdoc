#!/bin/bash

source lib.sh

test -n "$PREFIX" || {
  [ -n "$1" ] && {
    PREFIX=$1
  } || [ "$ENV" == "development" ] && {
    PREFIX='$(CURDIR)/usr/'
  } || {
    PREFIX=/usr/local
  }
}
echo PREFIX=$PREFIX


function rewrite_mk_prefix()
{
  local P
  P=$(echo $PREFIX | sed 's/\//\\\//g')
  sed_rewrite_tag 's/^PREFIX\(.*[:?]\)=.*/PREFIX\1= '$P'/' $1
  echo "Updated PREFIX in $1"
}

rewrite_mk_prefix Mkdocs-full.mk
rewrite_mk_prefix Mkdocs-minimal.mk

